<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_to_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Meals To DB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_by_ingredient"
        />

    <Button
        android:id="@+id/search_by_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search For Meals By Ingredients"
        app:layout_constraintTop_toBottomOf="@+id/add_to_db"
        app:layout_constraintBottom_toTopOf="@+id/search_for_meals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/search_for_meals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search For Meals"
        app:layout_constraintTop_toBottomOf="@+id/search_by_ingredient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>